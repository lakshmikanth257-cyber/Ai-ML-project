extends: default

ignore: |
  src/asya-operator/config/crd/*.yaml
  **/templates/
  **/manifests/
  **/testdata/
  **/helm-charts/
  src/asya-gateway/config/
  testing/integration/**/gateway-routes.yaml
  **/.golangci.yml
  **/docker-compose.yml
  examples/
  **/kind-config.yaml
  .github/
  .pre-commit-config.yaml
  .octocov.yml

rules:
  line-length:
    max: 120
  document-start: disable
  truthy:
    check-keys: false
  indentation:
    spaces: 2
    indent-sequences: false
  comments:
    min-spaces-from-content: 1
